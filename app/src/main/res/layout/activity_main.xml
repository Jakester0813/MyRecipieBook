<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2E1E61">



    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.eleven.group.myrecipiebook.MainActivity"
        android:layout_below="@+id/button2">
    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Recipes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#BFFCF4"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:background="#51B8AB"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:textColor="#A0C4F3"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:background="#4974AC"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:textColor="#B6E5F9"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:background="#45A6D0"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:textColor="#80A5E9"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:background="#26466D"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentEnd="true" />


</RelativeLayout>